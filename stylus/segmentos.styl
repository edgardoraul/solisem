// Los segmentos que trata la industria dedicada
.losSegmentos
	margin: 3em 0
	
	&__wrapper 
		align-content: space-between
		align-items: stretch
		flex-direction: row
		display: flex
		flex-wrap: wrap
		justify-content: stretch
	
	&__articulo
		flex: 0 0 100%
		padding: 0.5em 0

		&__header
			align-content: center
			align-items: center
			background-color: celeste_solisem
			border-radius: 0.25em
			display: flex
			justify-content: center
			margin-bottom: 1.5em
			min-height: 150px
			padding: 1em
			text-align: center

			&:hover
				background-color: rojo_solisem
				transition_comun()

			h1, h2, h3, h4, h5, h6
				color: blanco_puro
				font-weight: bold

@media all and ( min-width: ( $mobile * 1.25 ) )
	.losSegmentos
		&__wrapper
			flex-direction: row
			gap: 1em
		
		&__articulo
			flex: 1 1 30%

		
		