// Contenido especial de la home
.home
	.entry-title
		display: none


.homeContenido
	&__article
		align-items: stretch
		align-content: center
		background-attachment: scroll
		background-color: rojo_solisem
		background-position: left center;
		background-repeat: no-repeat
		background-size: cover
		border-radius: 0.25em
		display: flex
		min-height: 80vh
		overflow: hidden
		width: 100%
	
	&__contenido
		background-color: rgba(celeste_solisem, 0.9)
		color: blanco_puro
		max-width: 60%
		padding: 1em
		font-size: 1.2em
		display: flex
		align-items: center
		

@media all and (min-width: $tableta)
	.homeContenido
		&__contenido
			width: 25%
			text-align: right
			*
				width: 100%
