// Borde coloreado de los enlaces y cosas del formulario
a,
button,
input,
textarea
	&:focus
		outline-color celeste_solisem

// El mapa de ubicación
.mapa
	iframe
		border: 2px solid negro_re_transparente!important
		border-radius: 0.25em

// Redes sociales
.redes_sociales
	a
		display: inline-block
		margin: auto 0.25em

.redes_sociales__contacto
	span
		// display: inline-block
		font-size: 1.25em
		margin-left: 0.5em
		line-height: 2
		vertical-align: top

// Color de íconos del footer
.fab
	transition_comun()

	&:hover
		opacity 0.5

.fa-whatsapp-square
	color verde_whatsapp

.fa-instagram-square
	color morado_instagram
